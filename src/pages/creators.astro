  <style>
    .creators-page {
      background: #f8fafc;
    }

    .section-header {
      text-align: center;
      max-width: 600px;
      margin: 0 auto 3rem;
    }

    .section-header h2 {
      font-size: 2rem;
      color: #1a1a2e;
      margin-bottom: 0.5rem;
    }

    .section-header p {
      color: #6b7280;
      font-size: 1.125rem;
    }

    /* Hero */
    .hero {
      padding: 6rem 2rem;
      max-width: 1200px;
      margin: 0 auto;
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
      align-items: center;
    }

    .hero-badge {
      display: inline-block;
      background: linear-gradient(135deg, #dbeafe, #c7d2fe);
      color: #2563eb;
      padding: 0.5rem 1rem;
      border-radius: 999px;
      font-size: 0.875rem;
      font-weight: 600;
      margin-bottom: 1.5rem;
    }

    .hero h1 {
      font-size: 3rem;
      line-height: 1.1;
      color: #1a1a2e;
      margin-bottom: 1.5rem;
    }

    .hero p {
      font-size: 1.25rem;
      color: #6b7280;
      margin-bottom: 2rem;
      line-height: 1.6;
    }

    .hero-actions {
      display: flex;
      gap: 1rem;
      margin-bottom: 3rem;
    }

    .hero-stats {
      display: flex;
      gap: 2.5rem;
    }

    .hero-stats .stat-value {
      display: block;
      font-size: 1.75rem;
      font-weight: 700;
      color: #1a1a2e;
    }

    .hero-stats .stat-label {
      font-size: 0.875rem;
      color: #6b7280;
    }

    .hero-visual {
      position: relative;
      height: 400px;
    }

    .visual-card {
      position: absolute;
      width: 120px;
      height: 120px;
      background: white;
      border-radius: 20px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 3rem;
      box-shadow: 0 10px 40px rgba(0,0,0,0.1);
    }

    .card-1 { top: 20%; left: 10%; transform: rotate(-5deg); }
    .card-2 { top: 40%; right: 10%; transform: rotate(5deg); }
    .card-3 { bottom: 10%; left: 30%; transform: rotate(-3deg); background: linear-gradient(135deg, #d1fae5, #a7f3d0); }

    /* Buttons */
    .btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 0.75rem 1.5rem;
      border-radius: 10px;
      font-weight: 600;
      text-decoration: none;
      transition: all 0.2s;
    }

    .btn-lg {
      padding: 1rem 2rem;
      font-size: 1.0625rem;
    }

    .btn-primary {
      background: #2563eb;
      color: white;
    }

    .btn-primary:hover {
      background: #1d4ed8;
    }

    .btn-secondary {
      background: white;
      color: #374151;
      border: 2px solid #e5e7eb;
    }

    .btn-secondary:hover {
      border-color: #2563eb;
      color: #2563eb;
    }

