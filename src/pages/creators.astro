      padding: 5rem 2rem;
      background: white;
    }

    .steps-grid {
      max-width: 1100px;
      margin: 0 auto;
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
    }

    .step {
      text-align: center;
      padding: 2rem;
      position: relative;
    }

    .step-number {
      position: absolute;
      top: 1rem;
      right: 1rem;
      width: 28px;
      height: 28px;
      background: #f3f4f6;
      border-radius: 50%;
      font-size: 0.75rem;
      font-weight: 700;
      color: #9ca3af;
      display: flex;
      align-items: center;
