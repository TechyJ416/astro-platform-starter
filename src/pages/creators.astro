    .benefit-icon {
      font-size: 2rem;
      margin-bottom: 1rem;
    }

    .benefit-card h3 {
      font-size: 1.125rem;
      color: #1a1a2e;
      margin-bottom: 0.5rem;
    }

    .benefit-card p {
      color: #6b7280;
      font-size: 0.9375rem;
      line-height: 1.6;
    }

    /* Featured Campaigns */
    .featured-campaigns {
      padding: 5rem 2rem;
      background: white;
    }

    .campaigns-grid {
      max-width: 1000px;
      margin: 0 auto 2rem;
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 1.5rem;
    }

    .campaign-card {
      background: #f8fafc;
      padding: 1.5rem;
      border-radius: 12px;
      text-decoration: none;
      transition: all 0.2s;
      border: 2px solid transparent;
    }

    .campaign-card:hover {
      border-color: #2563eb;
      box-shadow: 0 4px 12px rgba(37, 99, 235, 0.15);
    }

    .campaign-card h3 {
      font-size: 1.0625rem;
      color: #1a1a2e;
      margin-bottom: 0.5rem;
    }

    .campaign-card p {
      color: #6b7280;
      font-size: 0.875rem;
      margin-bottom: 1rem;
      line-height: 1.5;
    }

    .campaign-meta {
      display: flex;
      justify-content: space-between;
      font-size: 0.8125rem;
    }

