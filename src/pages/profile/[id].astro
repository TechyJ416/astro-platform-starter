---
// src/pages/profile/[id].astro
export const prerender = false;

import Layout from "../../layouts/Layout.astro";
import { supabase } from "../../lib/supabase";

const { id } = Astro.params;
const session = Astro.locals.session;
const currentUser = session?.user;

// Fetch profile
const { data: profile, error } = await supabase
  .from('profiles')
  .select('*')
  .eq('id', id)
  .single();

if (error || !profile) {
  return Astro.redirect('/404');
}

// Check if profile is public or if viewer is the owner/admin
const isOwner = currentUser?.id === profile.id;
const isAdmin = Astro.locals.isAdmin;
const canView = profile.is_public_profile || isOwner || isAdmin;

if (!canView) {
  return Astro.redirect('/404');
}

// Fetch user's badges
const { data: userBadges } = await supabase
  .from('user_badges')
  .select(`
    id, awarded_at, notes,
    badge:badges(id, name, slug, description, icon, color, category)
  `)
  .eq('user_id', id)
  .order('awarded_at', { ascending: false });

// Fetch user's recent achievements
const { data: achievements } = await supabase
  .from('achievements')
  .select('*')
  .eq('user_id', id)
  .order('achieved_at', { ascending: false })
  .limit(10);

// Increment profile views (if not owner viewing)
if (!isOwner) {
  await supabase
    .from('profiles')
    .update({ profile_views: (profile.profile_views || 0) + 1 })
    .eq('id', id);
}

// Group badges by category
const badgesByCategory: Record<string, any[]> = {};
(userBadges || []).forEach(ub => {
  const cat = ub.badge?.category || 'other';
  if (!badgesByCategory[cat]) badgesByCategory[cat] = [];
  badgesByCategory[cat].push(ub);
});

// Level info
const levelInfo = {
  1: { name: 'Newcomer', color: '#6b7280', nextAt: 10 },
  2: { name: 'Rising Star', color: '#f59e0b', nextAt: 20 },
  3: { name: 'Expert', color: '#8b5cf6', nextAt: null },
};

const currentLevel = levelInfo[profile.level as keyof typeof levelInfo] || levelInfo[1];
const progress = profile.level < 3 
  ? Math.round((profile.completed_campaigns / (currentLevel.nextAt || 1)) * 100)
  : 100;

// Format date
function formatDate(date: string) {
  return new Date(date).toLocaleDateString('en-US', { 
    year: 'numeric', 
    month: 'long' 
  });
}

// Role display
const roleDisplay = {
  creator: 'Content Creator',
  manager: 'Campaign Manager',
  admin: 'Administrator',
  moderator: 'Moderator',
};
---

<Layout title={profile.full_name || 'Profile'}>
  <div class="profile-page">
    <!-- Header -->
    <div class="profile-header">
      <div class="profile-header-content">
        <div class="profile-avatar-section">
          <div class="profile-avatar">
            {profile.avatar_url ? (
              <img src={profile.avatar_url} alt={profile.full_name} />
            ) : (
              <span>{(profile.full_name || profile.email || '?').charAt(0).toUpperCase()}</span>
            )}
          </div>
          
          <div class="profile-info">
            <!-- Badge Bars (above username) -->
            {userBadges && userBadges.length > 0 && (
              <div class="badge-bars">
                {userBadges.slice(0, 8).map(ub => (
                  <span 
                    class="badge-bar" 
                    style={`background: ${ub.badge?.color || '#6b7280'}`}
                    title={ub.badge?.name}
                  >
                    <span class="badge-bar-icon">{ub.badge?.icon}</span>
                    <span class="badge-bar-name">{ub.badge?.name}</span>
                  </span>
                ))}
                {userBadges.length > 8 && (
                  <span class="badge-bar more" title={`${userBadges.length - 8} more badges`}>
                    +{userBadges.length - 8}
                  </span>
                )}
              </div>
            )}

            <!-- Achievement Bars -->
            {achievements && achievements.length > 0 && (
              <div class="achievement-bars">
                {achievements.slice(0, 5).map(ach => (
                  <span 
                    class="achievement-bar"
                    title={`${ach.title} - ${ach.description}`}
                  >
                    <span class="achievement-bar-icon">üèÜ</span>
                    <span class="achievement-bar-name">{ach.title}</span>
                  </span>
                ))}
                {achievements.length > 5 && (
                  <span class="achievement-bar more" title={`${achievements.length - 5} more achievements`}>
                    +{achievements.length - 5}
                  </span>
                )}
              </div>
            )}

            <div class="profile-name-row">
              <h1>{profile.full_name || 'Anonymous'}</h1>
              {profile.is_verified && (
                <span class="verified-badge" title="Verified">‚úì</span>
              )}
              {profile.is_premium && (
                <span class="premium-badge" title="Premium Member">‚≠ê</span>
              )}
            </div>
            
            {profile.username && (
              <p class="profile-username">@{profile.username}</p>
            )}
            
            <p class="profile-role">{roleDisplay[profile.role as keyof typeof roleDisplay] || profile.role}</p>
            
            <div class="profile-meta">
              <span>üìÖ Joined {formatDate(profile.created_at)}</span>
              {profile.profile_views > 0 && (
                <span>üëÅÔ∏è {profile.profile_views} views</span>
              )}
            </div>
          </div>
        </div>

        <!-- Level Progress -->
        <div class="level-section">
          <div class="level-badge" style={`background: ${currentLevel.color}`}>
            <span class="level-number">Lvl {profile.level}</span>
            <span class="level-name">{currentLevel.name}</span>
          </div>
          
          {profile.level < 3 && (
            <div class="level-progress">
              <div class="progress-bar">
                <div class="progress-fill" style={`width: ${progress}%`}></div>
              </div>
              <p class="progress-text">
                {profile.completed_campaigns} / {currentLevel.nextAt} campaigns to Level {profile.level + 1}
              </p>
            </div>
          )}
          
          {profile.level === 3 && (
            <p class="max-level">üåü Maximum level reached!</p>
          )}
        </div>
      </div>
    </div>

    <div class="profile-content">
      <div class="profile-main">
        <!-- Bio Section -->
        {profile.bio && (
          <section class="profile-section">
            <h2>About</h2>
            <p class="bio-text">{profile.bio}</p>
          </section>
        )}

        <!-- Stats -->
        <section class="profile-section">
          <h2>Stats</h2>
          <div class="stats-grid">
            <div class="stat-card">
              <span class="stat-value">{profile.completed_campaigns || 0}</span>
              <span class="stat-label">Campaigns</span>
            </div>
            {(profile.role === 'creator' && profile.is_verified) && (
              <div class="stat-card">
                <span class="stat-value">${profile.total_earnings?.toLocaleString() || '0'}</span>
                <span class="stat-label">Total Earned</span>
              </div>
            )}
            <div class="stat-card">
              <span class="stat-value">{userBadges?.length || 0}</span>
              <span class="stat-label">Badges</span>
            </div>
            <div class="stat-card">
              <span class="stat-value">Level {profile.level}</span>
              <span class="stat-label">{profile.is_verified ? 'Verified' : 'Unverified'}</span>
            </div>
          </div>
        </section>

        <!-- Badges Section -->
        {userBadges && userBadges.length > 0 && (
          <section class="profile-section">
            <h2>Badges & Achievements</h2>
            
            {/* Verification Badge */}
            {badgesByCategory['verified']?.length > 0 && (
              <div class="badge-category">
                <h3>Verification</h3>
                <div class="badges-grid">
                  {badgesByCategory['verified'].map(ub => (
                    <div class="badge-card" style={`border-color: ${ub.badge.color}`}>
                      <span class="badge-icon" style={`background: ${ub.badge.color}`}>{ub.badge.icon}</span>
                      <div class="badge-info">
                        <span class="badge-name">{ub.badge.name}</span>
                        <span class="badge-desc">{ub.badge.description}</span>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            )}

            {/* Level Badges */}
            {badgesByCategory['level']?.length > 0 && (
              <div class="badge-category">
                <h3>Level Achievements</h3>
                <div class="badges-grid">
                  {badgesByCategory['level'].map(ub => (
                    <div class="badge-card" style={`border-color: ${ub.badge.color}`}>
                      <span class="badge-icon" style={`background: ${ub.badge.color}`}>{ub.badge.icon}</span>
                      <div class="badge-info">
                        <span class="badge-name">{ub.badge.name}</span>
                        <span class="badge-desc">{ub.badge.description}</span>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            )}

            {/* Milestone Badges */}
            {badgesByCategory['milestone']?.length > 0 && (
              <div class="badge-category">
                <h3>Milestones</h3>
                <div class="badges-grid">
                  {badgesByCategory['milestone'].map(ub => (
                    <div class="badge-card" style={`border-color: ${ub.badge.color}`}>
                      <span class="badge-icon" style={`background: ${ub.badge.color}`}>{ub.badge.icon}</span>
                      <div class="badge-info">
                        <span class="badge-name">{ub.badge.name}</span>
                        <span class="badge-desc">{ub.badge.description}</span>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            )}

            {/* Special Badges */}
            {badgesByCategory['special']?.length > 0 && (
              <div class="badge-category">
                <h3>Special Recognition</h3>
                <div class="badges-grid">
                  {badgesByCategory['special'].map(ub => (
                    <div class="badge-card special" style={`border-color: ${ub.badge.color}`}>
                      <span class="badge-icon" style={`background: ${ub.badge.color}`}>{ub.badge.icon}</span>
                      <div class="badge-info">
                        <span class="badge-name">{ub.badge.name}</span>
                        <span class="badge-desc">{ub.badge.description}</span>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            )}

            {/* Achievement Badges */}
            {badgesByCategory['achievement']?.length > 0 && (
              <div class="badge-category">
                <h3>Achievements</h3>
                <div class="badges-grid">
                  {badgesByCategory['achievement'].map(ub => (
                    <div class="badge-card" style={`border-color: ${ub.badge.color}`}>
                      <span class="badge-icon" style={`background: ${ub.badge.color}`}>{ub.badge.icon}</span>
                      <div class="badge-info">
                        <span class="badge-name">{ub.badge.name}</span>
                        <span class="badge-desc">{ub.badge.description}</span>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            )}
          </section>
        )}

        {/* No badges yet */}
        {(!userBadges || userBadges.length === 0) && (
          <section class="profile-section">
            <h2>Badges & Achievements</h2>
            <div class="empty-badges">
              <span>üèÜ</span>
              <p>No badges earned yet</p>
              {isOwner && (
                <p class="empty-hint">Complete campaigns and achievements to earn badges!</p>
              )}
            </div>
          </section>
        )}
      </div>

      <!-- Sidebar -->
      <aside class="profile-sidebar">
        {/* Social Links */}
        {(profile.website || profile.social_instagram || profile.social_tiktok || profile.social_youtube || profile.social_twitter) && (
          <div class="sidebar-card">
            <h3>Links</h3>
            <div class="social-links">
              {profile.website && (
                <a href={profile.website} target="_blank" rel="noopener" class="social-link">
                  üåê Website
                </a>
              )}
              {profile.social_instagram && (
                <a href={`https://instagram.com/${profile.social_instagram}`} target="_blank" rel="noopener" class="social-link instagram">
                  üì∑ Instagram
                </a>
              )}
              {profile.social_tiktok && (
                <a href={`https://tiktok.com/@${profile.social_tiktok}`} target="_blank" rel="noopener" class="social-link tiktok">
                  üéµ TikTok
                </a>
              )}
              {profile.social_youtube && (
                <a href={`https://youtube.com/@${profile.social_youtube}`} target="_blank" rel="noopener" class="social-link youtube">
                  ‚ñ∂Ô∏è YouTube
                </a>
              )}
              {profile.social_twitter && (
                <a href={`https://twitter.com/${profile.social_twitter}`} target="_blank" rel="noopener" class="social-link twitter">
                  üê¶ Twitter
                </a>
              )}
            </div>
          </div>
        )}

        {/* Actions */}
        {isOwner && (
          <div class="sidebar-card">
            <h3>Actions</h3>
            <div class="sidebar-actions">
              <a href="/settings" class="btn btn-secondary">‚úèÔ∏è Edit Profile</a>
            </div>
          </div>
        )}

        {isAdmin && !isOwner && (
          <div class="sidebar-card admin-card">
            <h3>üîß Admin</h3>
            <div class="sidebar-actions">
              <a href={`/admin/users?edit=${profile.id}`} class="btn btn-secondary">Edit User</a>
              <a href={`/admin/badges?user=${profile.id}`} class="btn btn-secondary">Manage Badges</a>
            </div>
          </div>
        )}
      </aside>
    </div>
  </div>

  <style>
