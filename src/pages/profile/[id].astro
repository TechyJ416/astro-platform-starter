    .profile-content {
      max-width: 1000px;
      margin: 0 auto;
      padding: 2rem 1.5rem;
      display: grid;
      grid-template-columns: 1fr 280px;
      gap: 2rem;
    }

    .profile-section {
      background: white;
      border-radius: 12px;
