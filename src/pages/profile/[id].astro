    .sidebar-card {
      background: white;
      border-radius: 12px;
      padding: 1.25rem;
    }

    .sidebar-card h3 {
      font-size: 0.875rem;
      color: #6b7280;
      margin-bottom: 1rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

