---
// src/pages/communities/index.astro
export const prerender = false;

import Layout from "../../layouts/Layout.astro";
import { supabase } from "../../lib/supabase";

const session = Astro.locals.session;
const profile = Astro.locals.profile;
const user = session?.user;

// Fetch all public communities
const { data: communities } = await supabase
  .from('communities')
  .select('*')
  .eq('is_public', true)
  .order('name');

// Get member counts for each community
const communitiesWithStats = await Promise.all((communities || []).map(async (community) => {
  let memberCount = 0;
  let topicCount = 0;
  
  try {
    const { count: members } = await supabase
      .from('community_members')
      .select('*', { count: 'exact', head: true })
      .eq('community_id', community.id);
    memberCount = members || 0;
  } catch (e) { /* table may not exist */ }

  try {
    const { count: topics } = await supabase
      .from('forum_topics')
      .select('*', { count: 'exact', head: true })
      .eq('community_id', community.id);
    topicCount = topics || 0;
  } catch (e) { /* table may not exist */ }

  return { ...community, memberCount, topicCount };
}));

// Stats
const totalCommunities = communitiesWithStats.length;
let totalMembers = 0;
let totalTopics = 0;

try {
  const { count } = await supabase.from('community_members').select('*', { count: 'exact', head: true });
  totalMembers = count || 0;
} catch (e) {}

try {
  const { count } = await supabase.from('forum_topics').select('*', { count: 'exact', head: true });
  totalTopics = count || 0;
} catch (e) {}
---

<Layout title="Communities">
  <div class="communities-page">
    <!-- Hero -->
    <section class="hero">
      <div class="container">
        <span class="hero-badge">ðŸ’¬ Communities</span>
        <h1>Creator Communities</h1>
        <p>Connect with fellow creators, share knowledge, and grow together in our vibrant community spaces.</p>
        
        <div class="hero-stats">
          <div class="stat">
            <span class="stat-value">{totalCommunities}</span>
            <span class="stat-label">Communities</span>
          </div>
          <div class="stat">
            <span class="stat-value">{totalMembers}</span>
            <span class="stat-label">Members</span>
          </div>
          <div class="stat">
            <span class="stat-value">{totalTopics}</span>
            <span class="stat-label">Discussions</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Communities Grid -->
    <section class="communities-section">
      <div class="container">
        {communitiesWithStats.length > 0 ? (
          <div class="communities-grid">
            {communitiesWithStats.map(community => (
              <div class="community-card">
                <div class="community-icon">{community.icon || 'ðŸ’¬'}</div>
                <div class="community-content">
                  <h3>{community.name}</h3>
                  {community.description && (
                    <p>{community.description}</p>
                  )}
                  <div class="community-stats">
                    <span>ðŸ‘¥ {community.memberCount} members</span>
                    <span>ðŸ’¬ {community.topicCount} topics</span>
                  </div>
                </div>
                <div class="community-actions">
                  <a href={`/forum?category=${community.slug}`} class="btn btn-primary">
                    View Discussions
                  </a>
                  {user && (
                    <a href={`/community/${community.slug}`} class="btn btn-secondary">
                      Community Page
                    </a>
                  )}
                </div>
              </div>
            ))}
          </div>
        ) : (
          <div class="empty-state">
            <span>ðŸ’¬</span>
            <h3>No communities yet</h3>
            <p>Communities will appear here once they're created.</p>
          </div>
        )}

        {!user && (
          <div class="cta-box">
            <h3>Join Our Community</h3>
            <p>Sign up to participate in discussions, connect with other creators, and grow together.</p>
            <div class="cta-actions">
              <a href="/signup" class="btn btn-primary btn-lg">Create Account</a>
              <a href="/login" class="btn btn-secondary btn-lg">Log In</a>
            </div>
          </div>
        )}
      </div>
    </section>

    <!-- Forum CTA -->
    <section class="forum-cta">
      <div class="container">
        <div class="forum-cta-content">
          <div class="forum-cta-text">
            <h2>ðŸ’¬ Join the Conversation</h2>
            <p>Visit our community forum to discuss, share tips, and connect with creators.</p>
          </div>
          <a href="/forum" class="btn btn-primary btn-lg">Go to Forum â†’</a>
        </div>
      </div>
    </section>
  </div>

  <style>
    .communities-page {
      min-height: 100vh;
      background: #f8fafc;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 1.5rem;
    }

    /* Hero */
    .hero {
      background: linear-gradient(135deg, #1a1a2e, #2d2d4a);
      padding: 4rem 0 3rem;
      text-align: center;
      color: white;
    }

    .hero-badge {
      display: inline-block;
      background: linear-gradient(135deg, #3b82f6, #2563eb);
      padding: 0.5rem 1.5rem;
      border-radius: 100px;
      font-size: 0.875rem;
      font-weight: 600;
      margin-bottom: 1.5rem;
    }

    .hero h1 {
      font-size: 2.5rem;
      margin-bottom: 1rem;
    }

    .hero > .container > p {
      font-size: 1.125rem;
      color: rgba(255,255,255,0.8);
      max-width: 600px;
      margin: 0 auto 2rem;
    }

    .hero-stats {
      display: flex;
      justify-content: center;
      gap: 3rem;
    }

    .hero-stats .stat {
      text-align: center;
    }

    .hero-stats .stat-value {
      display: block;
      font-size: 2rem;
      font-weight: 700;
    }

    .hero-stats .stat-label {
      font-size: 0.875rem;
      color: rgba(255,255,255,0.7);
    }

    /* Communities Section */
    .communities-section {
      padding: 3rem 0;
    }

    .communities-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
      gap: 1.5rem;
    }

    .community-card {
      background: white;
      border-radius: 16px;
      padding: 1.5rem;
      display: flex;
      flex-direction: column;
      gap: 1rem;
      box-shadow: 0 2px 8px rgba(0,0,0,0.06);
      transition: all 0.2s;
    }

    .community-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 8px 24px rgba(0,0,0,0.1);
    }

    .community-icon {
      width: 64px;
      height: 64px;
      background: linear-gradient(135deg, #dbeafe, #c7d2fe);
      border-radius: 16px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 2rem;
    }

    .community-content h3 {
      font-size: 1.25rem;
      color: #1a1a2e;
      margin-bottom: 0.5rem;
    }

    .community-content p {
      color: #6b7280;
      font-size: 0.9375rem;
      line-height: 1.6;
      margin-bottom: 0.75rem;
    }

    .community-stats {
      display: flex;
      gap: 1rem;
      font-size: 0.8125rem;
      color: #9ca3af;
    }

    .community-actions {
      display: flex;
      gap: 0.75rem;
      margin-top: auto;
      padding-top: 1rem;
      border-top: 1px solid #e5e7eb;
    }

    .community-actions .btn {
      flex: 1;
      text-align: center;
    }

    /* Buttons */
    .btn {
      padding: 0.75rem 1.5rem;
      border-radius: 8px;
      font-weight: 600;
      text-decoration: none;
      border: none;
      cursor: pointer;
      font-size: 0.9375rem;
      transition: all 0.2s;
    }

    .btn-lg {
      padding: 1rem 2rem;
      font-size: 1rem;
    }

    .btn-primary {
      background: #2563eb;
      color: white;
    }

    .btn-primary:hover {
      background: #1d4ed8;
    }

    .btn-secondary {
      background: #f3f4f6;
      color: #374151;
    }

    .btn-secondary:hover {
      background: #e5e7eb;
    }

    /* Empty State */
    .empty-state {
      text-align: center;
      padding: 4rem 2rem;
      background: white;
      border-radius: 16px;
    }

    .empty-state span {
      font-size: 3rem;
      display: block;
      margin-bottom: 1rem;
    }

    .empty-state h3 {
      color: #1a1a2e;
      margin-bottom: 0.5rem;
    }

    .empty-state p {
      color: #6b7280;
    }

    /* CTA Box */
    .cta-box {
      background: linear-gradient(135deg, #dbeafe, #ede9fe);
      border-radius: 16px;
      padding: 2.5rem;
      text-align: center;
      margin-top: 2rem;
    }

    .cta-box h3 {
      font-size: 1.5rem;
      color: #1a1a2e;
      margin-bottom: 0.5rem;
    }

    .cta-box p {
      color: #4b5563;
      margin-bottom: 1.5rem;
    }

    .cta-actions {
      display: flex;
      gap: 1rem;
      justify-content: center;
    }

    /* Forum CTA */
    .forum-cta {
      padding: 3rem 0;
      background: white;
    }

    .forum-cta-content {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: linear-gradient(135deg, #1a1a2e, #2d2d4a);
      border-radius: 16px;
      padding: 2rem 2.5rem;
      color: white;
    }

    .forum-cta-text h2 {
      font-size: 1.5rem;
      margin-bottom: 0.5rem;
    }

    .forum-cta-text p {
      color: rgba(255,255,255,0.8);
    }

    /* Responsive */
    @media (max-width: 768px) {
      .hero h1 {
        font-size: 1.75rem;
      }

      .hero-stats {
        gap: 1.5rem;
      }

      .hero-stats .stat-value {
        font-size: 1.5rem;
      }

      .communities-grid {
        grid-template-columns: 1fr;
      }

      .cta-actions {
        flex-direction: column;
      }

      .forum-cta-content {
        flex-direction: column;
        text-align: center;
        gap: 1.5rem;
      }
    }
  </style>
</Layout>
