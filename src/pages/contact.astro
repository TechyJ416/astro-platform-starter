// src/pages/contact.astro
export const prerender = false;

import Layout from "../layouts/Layout.astro";
import { getPageContent } from "../lib/content";

const content = await getPageContent('contact');

let successMessage = '';
let errorMessage = '';

if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    const name = formData.get('name') as string;
    const email = formData.get('email') as string;
    const subject = formData.get('subject') as string;
    const message = formData.get('message') as string;

    // Validate
    if (!name || !email || !message) {
      errorMessage = 'Please fill in all required fields.';
    } else if (!email.includes('@')) {
      errorMessage = 'Please enter a valid email address.';
    } else {
      // In production, you would send this to an email service or save to database
      // For now, we'll just show a success message
      
      // Optional: Send via Resend if configured
      const RESEND_API_KEY = import.meta.env.RESEND_API_KEY;
      const EMAIL_FROM = import.meta.env.EMAIL_FROM;
      const CONTACT_EMAIL = 'contact@yourdomain.com'; // Change this
      
      if (RESEND_API_KEY && EMAIL_FROM) {
        try {
          await fetch('https://api.resend.com/emails', {
            method: 'POST',
            headers: {
              'Authorization': `Bearer ${RESEND_API_KEY}`,
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({
              from: EMAIL_FROM,
              to: CONTACT_EMAIL,
              subject: `Contact Form: ${subject || 'General Inquiry'}`,
              html: `
                <h2>New Contact Form Submission</h2>
                <p><strong>Name:</strong> ${name}</p>
                <p><strong>Email:</strong> ${email}</p>
                <p><strong>Subject:</strong> ${subject || 'N/A'}</p>
                <p><strong>Message:</strong></p>
                <p>${message.replace(/\n/g, '<br>')}</p>
              `,
              reply_to: email,
            }),
          });
        } catch (e) {
          console.error('Failed to send email:', e);
        }
      }
      
      successMessage = 'Thank you for your message! We\'ll get back to you soon.';
    }
  } catch (e) {
    errorMessage = 'Something went wrong. Please try again.';
  }
}
