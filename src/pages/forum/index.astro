// src/pages/forum/index.astro
export const prerender = false;

import Layout from "../../layouts/Layout.astro";
import { supabase } from "../../lib/supabase";

const session = Astro.locals.session;
const profile = Astro.locals.profile;
const user = session?.user;

let actionMessage = '';
let actionError = '';

// Handle new topic submission
if (Astro.request.method === 'POST' && user) {
  const form = await Astro.request.formData();
  const action = form.get('action');

  if (action === 'create_topic') {
    const title = form.get('title') as string;
    const content = form.get('content') as string;
    const communityId = form.get('community_id') as string || '00000000-0000-0000-0000-000000000001';

    if (title && content) {
      const { data, error } = await supabase
        .from('forum_topics')
        .insert({
          title,
          content,
          user_id: user.id,
          community_id: communityId
        })
        .select()
        .single();

      if (error) {
        actionError = error.message;
      } else {
        return Astro.redirect(`/forum/topic/${data.id}`);
      }
    } else {
      actionError = 'Title and content are required';
    }
  }
}

// Fetch communities/categories
const { data: communities } = await supabase
  .from('communities')
  .select('*')
  .eq('is_public', true)
  .order('name');

// Fetch topics with pagination
const page = parseInt(Astro.url.searchParams.get('page') || '1');
const perPage = 20;
const categorySlug = Astro.url.searchParams.get('category');

let topicsQuery = supabase
  .from('forum_topics')
  .select(`
    *,
    author:profiles!forum_topics_user_id_fkey(id, full_name, email, avatar_url, role, is_premium, creator_level),
    community:communities(id, name, slug, icon),
    last_replier:profiles!forum_topics_last_reply_by_fkey(full_name, avatar_url)
  `, { count: 'exact' })
  .order('is_pinned', { ascending: false })
  .order('last_reply_at', { ascending: false })
  .range((page - 1) * perPage, page * perPage - 1);

if (categorySlug) {
  const { data: cat } = await supabase
    .from('communities')
    .select('id')
    .eq('slug', categorySlug)
    .single();
  if (cat) {
    topicsQuery = topicsQuery.eq('community_id', cat.id);
  }
}

const { data: topics, count: totalTopics } = await topicsQuery;
const totalPages = Math.ceil((totalTopics || 0) / perPage);

// Fetch recent activity stats
const { count: totalTopicCount } = await supabase
  .from('forum_topics')
  .select('*', { count: 'exact', head: true });

const { count: totalReplyCount } = await supabase
  .from('forum_replies')
  .select('*', { count: 'exact', head: true });

const { count: memberCount } = await supabase
  .from('profiles')
  .select('*', { count: 'exact', head: true })
  .eq('status', 'active');

// Get active community for filter
const activeCategory = communities?.find(c => c.slug === categorySlug);

function timeAgo(date: string) {
  const seconds = Math.floor((Date.now() - new Date(date).getTime()) / 1000);
  if (seconds < 60) return 'just now';
  if (seconds < 3600) return `${Math.floor(seconds / 60)}m ago`;
  if (seconds < 86400) return `${Math.floor(seconds / 3600)}h ago`;
  if (seconds < 604800) return `${Math.floor(seconds / 86400)}d ago`;
  return new Date(date).toLocaleDateString();
}
