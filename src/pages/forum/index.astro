                      {topic.author?.role === 'admin' && <span class="role-badge admin">Admin</span>}
                      {topic.author?.role === 'moderator' && <span class="role-badge mod">Mod</span>}
                    </span>
                    <span class="topic-time">{timeAgo(topic.created_at)}</span>
                  </div>
                </div>
                
                <div class="topic-stats">
