                    <span class="topic-author">
                      {topic.author?.full_name || topic.author?.email}
                      {topic.author?.is_premium && <span class="premium-badge">‚≠ê</span>}
                      {topic.author?.role === 'admin' && <span class="role-badge admin">Admin</span>}
                      {topic.author?.role === 'moderator' && <span class="role-badge mod">Mod</span>}
                    </span>
                    <span class="topic-time">{timeAgo(topic.created_at)}</span>
                  </div>
                </div>
                
                <div class="topic-stats">
                  <div class="stat-item">
                    <span class="stat-num">{topic.reply_count || 0}</span>
                    <span class="stat-label">Replies</span>
                  </div>
                  <div class="stat-item">
                    <span class="stat-num">{topic.view_count || 0}</span>
                    <span class="stat-label">Views</span>
                  </div>
                </div>
                
                {topic.reply_count > 0 && topic.last_replier && (
                  <div class="topic-last-reply">
                    <span class="last-reply-label">Latest</span>
                    <div class="last-replier">
                      {topic.last_replier.avatar_url ? (
                        <img src={topic.last_replier.avatar_url} alt="" />
                      ) : (
                        <span>{(topic.last_replier.full_name || '?').charAt(0)}</span>
                      )}
                    </div>
                    <span class="last-reply-time">{timeAgo(topic.last_reply_at)}</span>
                  </div>
                )}
              </a>
            ))
          ) : (
            <div class="empty-state">
              <span>üí¨</span>
              <h3>No topics yet</h3>
              <p>Be the first to start a discussion!</p>
              {user && (
                <button class="btn btn-primary" onclick="document.getElementById('new-topic-modal').showModal()">
                  Create First Topic
                </button>
              )}
            </div>
          )}
        </div>

        {/* Pagination */}
        {totalPages > 1 && (
          <div class="pagination">
            {page > 1 && (
              <a href={`?page=${page - 1}${categorySlug ? `&category=${categorySlug}` : ''}`} class="page-btn">
                ‚Üê Previous
