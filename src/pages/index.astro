<body>
  <canvas id="nebula-canvas"></canvas>
  
  <div class="page-wrapper">
    <nav class="main-nav">
      <div class="nav-content">
        <a href="/" class="nav-logo">
          <span class="logo-icon">✦</span>
          <span class="logo-text">{general.siteName}</span>
