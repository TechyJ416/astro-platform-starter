---
// src/pages/about.astro
export const prerender = false;

import Layout from "../layouts/Layout.astro";
import { supabase } from "../lib/supabase";

let general = { siteName: 'Banity' };

try {
  const { data: rows } = await supabase.from('site_settings').select('key, value');
  if (rows) {
    for (const row of rows) {
      if (row.key === 'general') general = { ...general, ...row.value };
    }
  }
} catch (e) {}
---

<Layout title="About">
  <div class="about-page">
    <section class="hero-section">
      <div class="hero-content">
        <span class="header-label"><span class="label-line"></span> Our Story</span>
        <h1>Empowering Creators<br/><span class="accent">Worldwide</span></h1>
        <p class="hero-desc">
          {general.siteName} is building the future of authentic content creation, 
          connecting talented creators with brands that value genuine storytelling.
        </p>
      </div>
    </section>

    <section class="values-section">
      <div class="section-container">
        <div class="section-header">
          <span class="header-label"><span class="label-line"></span> What We Believe</span>
          <h2>Our Values</h2>
        </div>

        <div class="values-grid">
          <div class="value-card">
            <div class="value-icon">‚ú®</div>
            <h3>Authenticity First</h3>
            <p>We believe in real stories from real people. No fake followers, no manufactured content‚Äîjust genuine creativity.</p>
          </div>

          <div class="value-card">
            <div class="value-icon">ü§ù</div>
            <h3>Creator-Centric</h3>
            <p>Creators are at the heart of everything we do. Fair pay, transparent terms, and real support.</p>
          </div>

          <div class="value-card">
            <div class="value-icon">üöÄ</div>
            <h3>Innovation</h3>
            <p>We're constantly evolving our platform to give creators the best tools to succeed.</p>
          </div>

          <div class="value-card">
            <div class="value-icon">üåç</div>
            <h3>Community</h3>
            <p>Building a global network of creators who support and inspire each other.</p>
          </div>
        </div>
      </div>
    </section>

    <section class="mission-section">
      <div class="section-container">
        <div class="mission-content">
          <div class="mission-text">
            <span class="header-label"><span class="label-line"></span> Our Mission</span>
            <h2>Democratizing Content Creation</h2>
            <p>
              We're on a mission to make brand collaboration accessible to every creator, 
              regardless of their follower count. Quality content deserves recognition and fair compensation.
            </p>
            <p>
              Through our platform, we've helped thousands of creators turn their passion into income, 
              while helping brands discover authentic voices that resonate with their audiences.
            </p>
          </div>
          <div class="mission-stats">
            <div class="stat-item">
              <span class="stat-value">10K+</span>
              <span class="stat-label">Creators</span>
            </div>
            <div class="stat-item">
              <span class="stat-value">500+</span>
              <span class="stat-label">Campaigns</span>
            </div>
            <div class="stat-item">
              <span class="stat-value">$1M+</span>
              <span class="stat-label">Paid Out</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="cta-section">
      <div class="cta-container">
        <div class="cta-orb"></div>
        <div class="cta-content">
          <h2>Join Our Community</h2>
          <p>Ready to start creating content that matters?</p>
          <div class="cta-buttons">
            <a href="/signup" class="btn btn-primary">Become a Creator</a>
            <a href="/contact" class="btn btn-secondary">Get in Touch</a>
          </div>
        </div>
      </div>
    </section>
  </div>

  <style>
    .about-page { max-width: 1200px; margin: 0 auto; }

    .hero-section { padding: 4rem 2rem 6rem; text-align: center; }

    .hero-content { max-width: 700px; margin: 0 auto; }

    .header-label {
      display: inline-flex; align-items: center; gap: 1rem; margin-bottom: 1rem;
      font-size: 0.8125rem; color: var(--cosmic-blue); text-transform: uppercase;
      letter-spacing: 0.15em; font-weight: 600;
    }

    .label-line { width: 30px; height: 1px; background: var(--cosmic-blue); }

    .hero-section h1 {
      font-size: clamp(2.5rem, 6vw, 4rem); font-weight: 800;
      line-height: 1.1; margin-bottom: 1.5rem; letter-spacing: -0.02em;
    }

    .accent {
      background: linear-gradient(135deg, var(--cosmic-blue), var(--cosmic-purple));
      -webkit-background-clip: text; -webkit-text-fill-color: transparent;
    }

    .hero-desc { font-size: 1.25rem; color: var(--star-dim); line-height: 1.7; }

    .section-container { padding: 5rem 2rem; }

    .section-header { text-align: center; margin-bottom: 3rem; }
    .section-header h2 { font-size: 2rem; font-weight: 800; color: var(--star-white); }

    .values-grid {
      display: grid; grid-template-columns: repeat(auto-fit, minmax(260px, 1fr)); gap: 1.5rem;
    }

    .value-card {
      background: linear-gradient(135deg, rgba(26, 26, 46, 0.6), rgba(8, 8, 18, 0.6));
      border: 1px solid rgba(255, 255, 255, 0.06);
      border-radius: 20px; padding: 2rem; text-align: center;
      transition: all 0.3s;
    }

    .value-card:hover { border-color: rgba(79, 139, 255, 0.3); transform: translateY(-4px); }

    .value-icon { font-size: 2.5rem; margin-bottom: 1rem; }
    .value-card h3 { font-size: 1.125rem; color: var(--star-white); margin-bottom: 0.75rem; }
    .value-card p { color: var(--star-dim); font-size: 0.9375rem; line-height: 1.6; }

    .mission-section {
      background: linear-gradient(135deg, rgba(79, 139, 255, 0.05), rgba(168, 85, 247, 0.05));
      border-top: 1px solid rgba(255, 255, 255, 0.03);
      border-bottom: 1px solid rgba(255, 255, 255, 0.03);
    }

    .mission-content { display: grid; grid-template-columns: 1.5fr 1fr; gap: 4rem; align-items: center; }

    .mission-text h2 { font-size: 2rem; font-weight: 800; color: var(--star-white); margin-bottom: 1.5rem; }
    .mission-text p { color: var(--star-dim); line-height: 1.8; margin-bottom: 1rem; }

    .mission-stats { display: flex; flex-direction: column; gap: 2rem; }

    .stat-item { text-align: center; }
    .stat-value {
      display: block; font-family: var(--font-mono);
      font-size: 2.5rem; font-weight: 700; color: var(--cosmic-blue);
    }
    .stat-label { font-size: 0.875rem; color: var(--star-dim); text-transform: uppercase; letter-spacing: 0.1em; }

    .cta-section { padding: 6rem 2rem; }

    .cta-container {
      position: relative; max-width: 700px; margin: 0 auto;
      text-align: center; padding: 4rem 2rem;
    }

    .cta-orb {
      position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);
      width: 400px; height: 400px;
      background: radial-gradient(circle, var(--glow-purple) 0%, var(--glow-blue) 40%, transparent 70%);
      opacity: 0.3; filter: blur(60px); pointer-events: none;
    }

    .cta-content { position: relative; z-index: 1; }
    .cta-content h2 { font-size: 2rem; font-weight: 800; color: var(--star-white); margin-bottom: 0.75rem; }
    .cta-content p { color: var(--star-dim); font-size: 1.125rem; margin-bottom: 2rem; }

    .cta-buttons { display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap; }

    @media (max-width: 768px) {
      .mission-content { grid-template-columns: 1fr; }
      .mission-stats { flex-direction: row; justify-content: center; flex-wrap: wrap; }
    }
  </style>
</Layout>
