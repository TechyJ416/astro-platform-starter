import Layout from "../layouts/Layout.astro";
---

<Layout title="About Us">
  <div class="about-page">
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-content">
        <h1>Connecting Creators with Brands</h1>
        <p>We're building the future of authentic content marketing by empowering creators to do what they love.</p>
      </div>
    </section>

    <!-- Mission -->
    <section class="mission">
