        <div class="stats-grid">
          <div class="stat-item">
            <span class="stat-value">500+</span>
            <span class="stat-label">Active Creators</span>
          </div>
          <div class="stat-item">
            <span class="stat-value">100+</span>
            <span class="stat-label">Brand Partners</span>
          </div>
          <div class="stat-item">
            <span class="stat-value">$50k+</span>
            <span class="stat-label">Paid to Creators</span>
          </div>
          <div class="stat-item">
            <span class="stat-value">1000+</span>
            <span class="stat-label">Campaigns Completed</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Team (placeholder) -->
