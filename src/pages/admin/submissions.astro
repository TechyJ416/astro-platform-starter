  {actionMessage && <div class="alert success">{actionMessage}</div>}
  {actionError && <div class="alert error">{actionError}</div>}

  <!-- Header -->
  <div class="page-header">
    <h1>ðŸ“¤ Milestone Submissions</h1>
    <p class="subtitle">Review creator submissions and process payments</p>
  </div>

