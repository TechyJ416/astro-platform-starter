          <textarea name="feedback" id="feedback" rows="4" placeholder="Explain what needs to be changed or why it was rejected..."></textarea>
        </div>
        
        <div class="modal-actions">
          <button type="button" class="btn btn-secondary" onclick="closeFeedbackModal()">Cancel</button>
          <button type="submit" class="btn btn-primary" id="modalSubmitBtn">Submit</button>
        </div>
      </form>
    </div>
  </div>

  <script is:inline>
