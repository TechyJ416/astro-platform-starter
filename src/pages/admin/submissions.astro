      <div class="stat-value">{submissions?.length || 0}</div>
      <div class="stat-label">Total Submissions</div>
    </div>
    <div class="stat-card success">
      <div class="stat-value">${totalPaid.toFixed(0)}</div>
      <div class="stat-label">Total Paid</div>
    </div>
  </div>

  <!-- Filter Tabs -->
  <div class="filter-tabs">
    <a href="?filter=pending" class:list={["tab", { active: filter === 'pending' }]}>
      Pending ({pendingCount})
    </a>
    <a href="?filter=approved" class:list={["tab", { active: filter === 'approved' }]}>
      Approved ({approvedCount})
    </a>
    <a href="?filter=rejected" class:list={["tab", { active: filter === 'rejected' }]}>
      Rejected
    </a>
    <a href="?filter=all" class:list={["tab", { active: filter === 'all' }]}>
      All ({submissions?.length || 0})
    </a>
  </div>

  <!-- Submissions List -->
  <div class="panel">
    {filteredSubmissions.length > 0 ? (
      <div class="submissions-list">
        {filteredSubmissions.map(submission => (
          <div class="submission-card">
