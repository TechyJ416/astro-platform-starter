            </div>

            <div class="submission-details">
              <div class="detail-row">
                <span class="label">Campaign:</span>
                <span>{submission.campaign_milestones?.campaigns?.title || 'N/A'}</span>
              </div>
              <div class="detail-row">
                <span class="label">Milestone:</span>
                <span>{submission.campaign_milestones?.title || 'N/A'}</span>
              </div>
              <div class="detail-row">
                <span class="label">Submitted:</span>
                <span>{new Date(submission.submitted_at).toLocaleString()}</span>
              </div>
            </div>

            <div class="content-preview">
              <a href={submission.content_url} target="_blank" class="content-link">
                ðŸ”— View Submission
              </a>
              {submission.notes && (
                <p class="notes">{submission.notes}</p>
              )}
            </div>

            {submission.admin_feedback && (
              <div class="admin-feedback">
                <strong>Your Feedback:</strong> {submission.admin_feedback}
              </div>
            )}

            <div class="submission-actions">
              {submission.status === 'pending' && (
                <>
                  <form method="POST" class="inline">
                    <input type="hidden" name="submissionId" value={submission.id} />
                    <button type="submit" name="action" value="approve" class="btn btn-success">
                      âœ“ Approve
                    </button>
                  </form>
                  
                  <button type="button" class="btn btn-warning" onclick={`showFeedbackModal('${submission.id}', 'request_revision')`}>
                    â†» Request Revision
                  </button>
                  
                  <button type="button" class="btn btn-danger" onclick={`showFeedbackModal('${submission.id}', 'reject')`}>
                    âœ• Reject
                  </button>
                </>
              )}
              
              {submission.status === 'approved' && !submission.payment_id && submission.campaign_milestones?.payment_amount > 0 && (
                <form method="POST" class="inline">
                  <input type="hidden" name="submissionId" value={submission.id} />
                  <button type="submit" name="action" value="pay" class="btn btn-primary">
                    ðŸ’° Pay ${submission.campaign_milestones.payment_amount}
                  </button>
                </form>
              )}
              
              {submission.payment_id && (
                <span class="paid-badge">âœ“ Payment Processed</span>
              )}
            </div>
          </div>
        ))}
      </div>
    ) : (
      <div class="empty-state">
        <div class="empty-icon">ðŸ“¤</div>
        <h3>No {filter !== 'all' ? filter : ''} submissions</h3>
        <p>Submissions will appear here when creators submit their work.</p>
      </div>
    )}
  </div>

  <!-- Feedback Modal -->
  <div id="feedbackModal" class="modal" style="display: none;">
