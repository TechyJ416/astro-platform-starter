// src/pages/admin/submissions.astro
export const prerender = false;

import AdminLayout from "../../layouts/AdminLayout.astro";
import { createClient } from "@supabase/supabase-js";

const isMasterKeySession = Astro.locals.isMasterKeySession || false;
const session = Astro.locals.session;

if (!isMasterKeySession && !session) {
  return Astro.redirect('/admin/login');
}

// Create admin client
const supabaseUrl = import.meta.env.SUPABASE_URL;
const supabaseServiceKey = import.meta.env.SUPABASE_SERVICE_KEY;
const supabaseAnonKey = import.meta.env.PUBLIC_SUPABASE_ANON_KEY;
const STRIPE_SECRET_KEY = import.meta.env.STRIPE_SECRET_KEY;

const supabase = createClient(
  supabaseUrl,
  supabaseServiceKey || supabaseAnonKey,
  { auth: { autoRefreshToken: false, persistSession: false } }
);

let actionMessage = '';
let actionError = '';

// Handle actions
if (Astro.request.method === 'POST') {
  const form = await Astro.request.formData();
  const action = form.get('action') as string;
  const submissionId = form.get('submissionId') as string;

  // Fetch submission details
  const { data: submission } = await supabase
    .from('milestone_submissions')
    .select(`
      *,
      profiles:creator_id (id, email, full_name),
      campaign_milestones:milestone_id (id, title, payment_amount, campaign_id)
    `)
    .eq('id', submissionId)
    .single();

  if (action === 'approve' && submissionId) {
    const { error } = await supabase
      .from('milestone_submissions')
      .update({ 
        status: 'approved',
        reviewed_at: new Date().toISOString(),
      })
      .eq('id', submissionId);

    if (error) {
      actionError = error.message;
    } else {
      actionMessage = 'Submission approved!';
    }
  }

  if (action === 'reject' && submissionId) {
    const feedback = form.get('feedback') as string;
    
    const { error } = await supabase
      .from('milestone_submissions')
      .update({ 
        status: 'rejected',
        admin_feedback: feedback,
        reviewed_at: new Date().toISOString(),
      })
      .eq('id', submissionId);

    if (error) {
      actionError = error.message;
    } else {
      actionMessage = 'Submission rejected.';
    }
  }

  if (action === 'request_revision' && submissionId) {
    const feedback = form.get('feedback') as string;
    
    const { error } = await supabase
      .from('milestone_submissions')
      .update({ 
        status: 'revision_requested',
        admin_feedback: feedback,
        reviewed_at: new Date().toISOString(),
      })
      .eq('id', submissionId);

    if (error) {
      actionError = error.message;
    } else {
      actionMessage = 'Revision requested.';
    }
  }

  if (action === 'pay' && submissionId && submission) {
    const milestonePayment = submission.campaign_milestones?.payment_amount || 0;
    
    if (milestonePayment <= 0) {
      actionError = 'No payment amount set for this milestone.';
    } else {
      // Create payment record
      const { data: payment, error: paymentError } = await supabase
        .from('payments')
        .insert({
          creator_id: submission.creator_id,
          campaign_id: submission.campaign_milestones?.campaign_id,
          amount: milestonePayment,
          status: 'pending',
          description: `Payment for: ${submission.campaign_milestones?.title}`,
          created_at: new Date().toISOString(),
        })
        .select()
        .single();

      if (paymentError) {
        actionError = paymentError.message;
      } else {
        // Get creator's Stripe account
        const { data: creatorPayment } = await supabase
          .from('creator_payment_profiles')
          .select('stripe_account_id, stripe_onboarding_complete')
          .eq('creator_id', submission.creator_id)
          .single();

        if (!creatorPayment?.stripe_account_id || !creatorPayment?.stripe_onboarding_complete) {
          // Mark payment as pending - creator needs to set up Stripe
          await supabase
            .from('payments')
            .update({ status: 'pending', description: `${payment.description} (Awaiting creator Stripe setup)` })
            .eq('id', payment.id);
          
          actionMessage = `Payment of $${milestonePayment} created but creator hasn't completed Stripe setup.`;
        } else if (STRIPE_SECRET_KEY) {
          // Initiate Stripe transfer
          try {
            const transferResponse = await fetch('https://api.stripe.com/v1/transfers', {
              method: 'POST',
              headers: {
                'Authorization': `Bearer ${STRIPE_SECRET_KEY}`,
                'Content-Type': 'application/x-www-form-urlencoded',
              },
              body: new URLSearchParams({
                'amount': String(Math.round(milestonePayment * 100)), // Convert to cents
                'currency': 'usd',
                'destination': creatorPayment.stripe_account_id,
                'metadata[payment_id]': payment.id,
                'metadata[creator_id]': submission.creator_id,
              }),
            });

            const transfer = await transferResponse.json();

            if (transfer.error) {
              await supabase
                .from('payments')
                .update({ status: 'failed' })
                .eq('id', payment.id);
              actionError = transfer.error.message;
            } else {
              await supabase
                .from('payments')
                .update({ 
                  status: 'processing',
                  stripe_payment_intent_id: transfer.id,
                })
                .eq('id', payment.id);
              
              // Update creator's earnings
              await supabase.rpc('increment_creator_earnings', {
                p_creator_id: submission.creator_id,
                p_amount: milestonePayment
              }).catch(() => {
                // RPC might not exist, update manually
                supabase
                  .from('creator_payment_profiles')
                  .update({ 
                    total_earned: supabase.rpc('coalesce', { val: 'total_earned', default_val: 0 }) 
                  })
                  .eq('creator_id', submission.creator_id);
              });

              actionMessage = `Payment of $${milestonePayment} initiated to ${submission.profiles?.full_name || 'creator'}!`;
            }
          } catch (err: any) {
            await supabase
              .from('payments')
              .update({ status: 'failed' })
              .eq('id', payment.id);
            actionError = err.message || 'Failed to process payment';
          }
        } else {
          // Stripe not configured - just mark as completed manually
          await supabase
            .from('payments')
            .update({ status: 'completed', completed_at: new Date().toISOString() })
            .eq('id', payment.id);
          
          actionMessage = `Payment of $${milestonePayment} recorded (Stripe not configured).`;
        }

        // Update submission with payment reference
        await supabase
          .from('milestone_submissions')
          .update({ payment_id: payment.id })
          .eq('id', submissionId);
      }
    }
  }
}

// Fetch all submissions with details
const { data: submissions } = await supabase
  .from('milestone_submissions')
  .select(`
    *,
    profiles:creator_id (id, email, full_name, avatar_url),
    campaign_milestones:milestone_id (
      id, title, payment_amount,
      campaigns:campaign_id (id, title)
    )
  `)
  .order('submitted_at', { ascending: false });

// Filter by status
const filter = Astro.url.searchParams.get('filter') || 'pending';
const filteredSubmissions = submissions?.filter(sub => {
  if (filter === 'pending') return sub.status === 'pending';
  if (filter === 'approved') return sub.status === 'approved';
  if (filter === 'rejected') return sub.status === 'rejected' || sub.status === 'revision_requested';
  return true;
}) || [];

// Stats
const pendingCount = submissions?.filter(s => s.status === 'pending').length || 0;
const approvedCount = submissions?.filter(s => s.status === 'approved').length || 0;
const totalPaid = submissions?.filter(s => s.payment_id).reduce((sum, s) => 
  sum + (s.campaign_milestones?.payment_amount || 0), 0) || 0;

function getStatusBadge(status: string) {
  const badges: Record<string, { label: string; class: string }> = {
    pending: { label: 'Pending Review', class: 'pending' },
    approved: { label: 'Approved', class: 'approved' },
    rejected: { label: 'Rejected', class: 'rejected' },
    revision_requested: { label: 'Revision Needed', class: 'revision' },
  };
  return badges[status] || { label: status, class: 'default' };
}
