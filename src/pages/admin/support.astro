// src/pages/admin/support.astro
export const prerender = false;

import AdminLayout from "../../layouts/AdminLayout.astro";
import { createClient } from "@supabase/supabase-js";

const isMasterKeySession = Astro.locals.isMasterKeySession || false;
const session = Astro.locals.session;

if (!isMasterKeySession && !session) {
  return Astro.redirect('/admin/login');
}

const supabase = createClient(
  import.meta.env.SUPABASE_URL,
  import.meta.env.SUPABASE_SERVICE_KEY || import.meta.env.PUBLIC_SUPABASE_ANON_KEY,
  { auth: { autoRefreshToken: false, persistSession: false } }
);

let actionMessage = '';
let actionError = '';

// Handle actions
if (Astro.request.method === 'POST') {
  const form = await Astro.request.formData();
  const action = form.get('action') as string;
  const ticketId = form.get('ticket_id') as string;

  if (action === 'update_status') {
    const newStatus = form.get('status') as string;
    const { error } = await supabase
      .from('support_tickets')
      .update({ 
        status: newStatus,
        updated_at: new Date().toISOString(),
        resolved_at: newStatus === 'resolved' ? new Date().toISOString() : null
      })
      .eq('id', ticketId);

    if (error) {
      actionError = error.message;
    } else {
      actionMessage = `Ticket status updated to ${newStatus}`;
    }
  }

  if (action === 'reply') {
    const message = form.get('message') as string;
    const staffId = session?.user?.id || null;

    const { error } = await supabase
      .from('support_ticket_messages')
      .insert({
        ticket_id: ticketId,
        sender_id: staffId,
        message,
        is_staff_reply: true
      });

    if (error) {
      actionError = error.message;
    } else {
      actionMessage = 'Reply sent successfully';
    }
  }

  if (action === 'assign') {
    const assignTo = form.get('assign_to') as string;
    const { error } = await supabase
      .from('support_tickets')
      .update({ 
        assigned_to: assignTo || null,
        status: 'in_progress',
        updated_at: new Date().toISOString()
      })
      .eq('id', ticketId);

    if (error) {
      actionError = error.message;
    } else {
      actionMessage = 'Ticket assigned';
    }
  }
}

// URL params
const filterStatus = Astro.url.searchParams.get('status') || 'open';
const filterPriority = Astro.url.searchParams.get('priority') || 'all';
const viewTicketId = Astro.url.searchParams.get('view');

// Build query
let query = supabase
  .from('support_tickets')
  .select(`
    *,
    user:profiles!support_tickets_user_id_fkey(id, email, full_name, is_premium, creator_level, avatar_url),
    assigned:profiles!support_tickets_assigned_to_fkey(id, email, full_name)
  `)
  .order('is_premium_ticket', { ascending: false })
  .order('created_at', { ascending: false });

if (filterStatus !== 'all') {
  query = query.eq('status', filterStatus);
}

if (filterPriority !== 'all') {
  query = query.eq('priority', filterPriority);
}

const { data: tickets, error: loadError } = await query;

// Get ticket details if viewing
let viewTicket = null;
let ticketMessages: any[] = [];
if (viewTicketId) {
  const { data: ticket } = await supabase
    .from('support_tickets')
    .select(`
      *,
      user:profiles!support_tickets_user_id_fkey(*),
      assigned:profiles!support_tickets_assigned_to_fkey(id, email, full_name)
    `)
    .eq('id', viewTicketId)
    .single();
  viewTicket = ticket;

  const { data: messages } = await supabase
    .from('support_ticket_messages')
    .select(`
      *,
      sender:profiles!support_ticket_messages_sender_id_fkey(id, email, full_name, avatar_url, role)
    `)
    .eq('ticket_id', viewTicketId)
    .order('created_at', { ascending: true });
  ticketMessages = messages || [];
}

// Get staff list for assignment
const { data: staffList } = await supabase
  .from('profiles')
  .select('id, email, full_name')
  .in('role', ['admin', 'moderator']);

// Stats
const { count: openCount } = await supabase
  .from('support_tickets')
  .select('*', { count: 'exact', head: true })
  .eq('status', 'open');

const { count: premiumOpenCount } = await supabase
  .from('support_tickets')
  .select('*', { count: 'exact', head: true })
  .eq('status', 'open')
  .eq('is_premium_ticket', true);

const { count: inProgressCount } = await supabase
  .from('support_tickets')
  .select('*', { count: 'exact', head: true })
  .eq('status', 'in_progress');
