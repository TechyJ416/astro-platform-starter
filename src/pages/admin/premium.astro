// src/pages/admin/premium.astro
export const prerender = false;

import AdminLayout from "../../layouts/AdminLayout.astro";
import { createClient } from "@supabase/supabase-js";

const isMasterKeySession = Astro.locals.isMasterKeySession || false;
const session = Astro.locals.session;

if (!isMasterKeySession && !session) {
  return Astro.redirect('/admin/login');
}

const supabase = createClient(
  import.meta.env.SUPABASE_URL,
  import.meta.env.SUPABASE_SERVICE_KEY || import.meta.env.PUBLIC_SUPABASE_ANON_KEY,
  { auth: { autoRefreshToken: false, persistSession: false } }
);

let actionMessage = '';
let actionError = '';

// Handle actions
if (Astro.request.method === 'POST') {
  const form = await Astro.request.formData();
  const action = form.get('action') as string;
  const userId = form.get('user_id') as string;

  if (action === 'grant_premium') {
    const duration = form.get('duration') as string; // '1_month', '1_year', 'lifetime'
    let expiresAt = null;
    
    if (duration === '1_month') {
      expiresAt = new Date(Date.now() + 30 * 24 * 60 * 60 * 1000).toISOString();
    } else if (duration === '1_year') {
      expiresAt = new Date(Date.now() + 365 * 24 * 60 * 60 * 1000).toISOString();
    }
    // lifetime = null expires_at

    const { error } = await supabase
      .from('profiles')
      .update({
        is_premium: true,
        premium_since: new Date().toISOString(),
        premium_expires: expiresAt,
        priority_support: true,
        monthly_boosts_remaining: 1,
        last_boost_reset: new Date().toISOString()
      })
      .eq('id', userId);

    if (error) {
      actionError = error.message;
    } else {
      actionMessage = 'Premium granted successfully!';
    }
  }

  if (action === 'revoke_premium') {
    const { error } = await supabase
      .from('profiles')
      .update({
        is_premium: false,
        premium_expires: null,
        priority_support: false,
        monthly_boosts_remaining: 0
      })
      .eq('id', userId);

    if (error) {
      actionError = error.message;
    } else {
      actionMessage = 'Premium revoked';
    }
  }

  if (action === 'add_boost') {
    const { error } = await supabase.rpc('add_boost_to_user', { p_user_id: userId });
    
    // Fallback if function doesn't exist
    if (error) {
      const { error: updateError } = await supabase
        .from('profiles')
        .update({ monthly_boosts_remaining: 1 })
        .eq('id', userId);
      
      if (updateError) {
        actionError = updateError.message;
      } else {
        actionMessage = 'Boost added';
      }
    } else {
      actionMessage = 'Boost added';
    }
  }

  if (action === 'set_level') {
    const level = parseInt(form.get('level') as string);
    const { error } = await supabase
      .from('profiles')
      .update({ creator_level: level })
      .eq('id', userId);

    if (error) {
      actionError = error.message;
    } else {
      actionMessage = `Level set to ${level}`;
    }
  }

  if (action === 'add_xp') {
    const xpAmount = parseInt(form.get('xp_amount') as string);
    const { data: profile } = await supabase
      .from('profiles')
      .select('creator_xp, creator_level')
      .eq('id', userId)
      .single();

    if (profile) {
      const newXP = (profile.creator_xp || 0) + xpAmount;
      let newLevel = profile.creator_level || 1;
      
      // Calculate new level
      if (newXP >= 5000) newLevel = 3;
      else if (newXP >= 1000) newLevel = 2;
      else newLevel = 1;

      const { error } = await supabase
        .from('profiles')
        .update({ creator_xp: newXP, creator_level: newLevel })
        .eq('id', userId);

      if (error) {
        actionError = error.message;
      } else {
        actionMessage = `Added ${xpAmount} XP (Total: ${newXP}, Level: ${newLevel})`;
      }
    }
  }
}

// Fetch premium members
const { data: premiumMembers } = await supabase
  .from('profiles')
  .select('*')
  .eq('is_premium', true)
  .order('premium_since', { ascending: false });

// Fetch all creators for granting premium
const { data: allCreators } = await supabase
  .from('profiles')
  .select('id, email, full_name, is_premium, creator_level, creator_xp')
  .eq('role', 'creator')
  .eq('is_premium', false)
  .order('created_at', { ascending: false })
  .limit(50);

// Stats
const { count: totalPremium } = await supabase
  .from('profiles')
  .select('*', { count: 'exact', head: true })
  .eq('is_premium', true);

const { count: level3Count } = await supabase
  .from('profiles')
  .select('*', { count: 'exact', head: true })
  .eq('creator_level', 3);

const { count: level2Count } = await supabase
  .from('profiles')
  .select('*', { count: 'exact', head: true })
  .eq('creator_level', 2);

// Active boosts
const { data: activeBoosts } = await supabase
  .from('campaign_boosts')
  .select(`
    *,
    user:profiles!campaign_boosts_user_id_fkey(full_name, email),
    campaign:campaigns(title)
  `)
  .eq('is_active', true)
  .gte('expires_at', new Date().toISOString());

// Level config
const { data: levelConfig } = await supabase
  .from('level_config')
  .select('*')
  .order('level');
