// src/pages/admin/content.astro
export const prerender = false;

import AdminLayout from "../../layouts/AdminLayout.astro";
import { createClient } from "@supabase/supabase-js";

const isMasterKeySession = Astro.locals.isMasterKeySession || false;
const session = Astro.locals.session;

if (!isMasterKeySession && !session) {
  return Astro.redirect('/admin/login');
}

// Use service key for admin operations
const supabase = createClient(
  import.meta.env.SUPABASE_URL,
  import.meta.env.SUPABASE_SERVICE_KEY || import.meta.env.PUBLIC_SUPABASE_ANON_KEY,
  { auth: { autoRefreshToken: false, persistSession: false } }
);

const hasServiceKey = !!import.meta.env.SUPABASE_SERVICE_KEY;

let successMessage = '';
let errorMessage = '';

// Handle form submission
if (Astro.request.method === 'POST') {
  const form = await Astro.request.formData();
  const pageKey = form.get('page_key') as string;
  const contentJson = form.get('content') as string;

  if (!hasServiceKey) {
    errorMessage = 'SUPABASE_SERVICE_KEY not configured. Cannot save changes.';
  } else {
    try {
      const content = JSON.parse(contentJson);
      
      const { data, error } = await supabase
        .from('page_content')
        .update({ 
          content, 
          updated_at: new Date().toISOString(),
        })
        .eq('page_key', pageKey)
        .select();

      if (error) {
        errorMessage = `Database error: ${error.message}`;
      } else if (!data || data.length === 0) {
        errorMessage = `No rows updated. Page "${pageKey}" may not exist in database.`;
      } else {
        successMessage = `‚úÖ ${pageKey.charAt(0).toUpperCase() + pageKey.slice(1)} page updated! Refresh the live page to see changes.`;
      }
    } catch (e: any) {
      errorMessage = `Parse error: ${e.message}`;
    }
  }
}

// Fetch all page content
const { data: pages, error: loadError } = await supabase
  .from('page_content')
  .select('*')
  .order('page_key');

if (loadError) {
  errorMessage = `Load error: ${loadError.message}. Have you run page-content-schema.sql?`;
}

const allPages = pages || [];
const activeTab = Astro.url.searchParams.get('page') || allPages[0]?.page_key || 'home';
const activePage = allPages.find(p => p.page_key === activeTab);

// Define editable fields for each page type
const pageSchemas: Record<string, any> = {
  home: {
    sections: [
      { key: 'hero', title: 'Hero Section', fields: [
        { name: 'badge', label: 'Badge Text', type: 'text' },
        { name: 'title', label: 'Title', type: 'text' },
        { name: 'subtitle', label: 'Subtitle', type: 'textarea' },
        { name: 'cta_primary.text', label: 'Primary Button Text', type: 'text' },
        { name: 'cta_primary.link', label: 'Primary Button Link', type: 'text' },
        { name: 'cta_secondary.text', label: 'Secondary Button Text', type: 'text' },
        { name: 'cta_secondary.link', label: 'Secondary Button Link', type: 'text' },
      ]},
      { key: 'stats', title: 'Statistics', fields: [
        { name: 'creators', label: 'Creators Count', type: 'text' },
        { name: 'campaigns', label: 'Campaigns Count', type: 'text' },
        { name: 'paid_out', label: 'Amount Paid Out', type: 'text' },
      ]},
      { key: 'cta_section', title: 'CTA Section', fields: [
        { name: 'title', label: 'Title', type: 'text' },
        { name: 'subtitle', label: 'Subtitle', type: 'text' },
        { name: 'button_text', label: 'Button Text', type: 'text' },
        { name: 'button_link', label: 'Button Link', type: 'text' },
      ]},
    ]
  },
  about: {
    sections: [
      { key: 'hero', title: 'Hero Section', fields: [
        { name: 'badge', label: 'Badge Text', type: 'text' },
        { name: 'title', label: 'Title', type: 'text' },
        { name: 'subtitle', label: 'Subtitle', type: 'textarea' },
      ]},
      { key: 'mission', title: 'Mission Section', fields: [
        { name: 'title', label: 'Title', type: 'text' },
        { name: 'content', label: 'Content', type: 'textarea' },
      ]},
    ]
  },
  creators: {
    sections: [
      { key: 'hero', title: 'Hero Section', fields: [
        { name: 'badge', label: 'Badge Text', type: 'text' },
        { name: 'title', label: 'Title', type: 'text' },
        { name: 'subtitle', label: 'Subtitle', type: 'textarea' },
      ]},
    ]
  },
  contact: {
    sections: [
      { key: 'hero', title: 'Hero Section', fields: [
        { name: 'badge', label: 'Badge Text', type: 'text' },
        { name: 'title', label: 'Title', type: 'text' },
        { name: 'subtitle', label: 'Subtitle', type: 'textarea' },
      ]},
      { key: 'info', title: 'Contact Information', fields: [
        { name: 'email', label: 'General Email', type: 'text' },
        { name: 'support_email', label: 'Support Email', type: 'text' },
        { name: 'partnerships_email', label: 'Partnerships Email', type: 'text' },
      ]},
    ]
  },
  legal: {
    sections: [
      { key: '', title: 'Legal Information', fields: [
        { name: 'last_updated', label: 'Last Updated Date', type: 'text' },
        { name: 'company_name', label: 'Company Name', type: 'text' },
        { name: 'privacy_email', label: 'Privacy Email', type: 'text' },
        { name: 'legal_email', label: 'Legal Email', type: 'text' },
      ]},
    ]
  },
};

// Helper to get nested value
function getNestedValue(obj: any, path: string): any {
  if (!path) return obj;
  return path.split('.').reduce((o, k) => o?.[k], obj);
}
