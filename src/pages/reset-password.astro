// src/pages/reset-password.astro
export const prerender = false;

import Layout from "../layouts/Layout.astro";
import { supabase } from "../lib/supabase";

let error = '';
let success = false;
let tokenValid = false;

// Check for access_token in URL hash (Supabase sends it as a fragment)
// The actual token validation happens client-side since it's in the hash
const code = Astro.url.searchParams.get('code');

if (Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();
  const password = formData.get('password') as string;
  const confirmPassword = formData.get('confirmPassword') as string;
  const accessToken = formData.get('access_token') as string;

  if (!password) {
    error = 'Please enter a new password.';
  } else if (password.length < 8) {
    error = 'Password must be at least 8 characters.';
  } else if (password !== confirmPassword) {
    error = 'Passwords do not match.';
  } else if (!accessToken) {
    error = 'Invalid or expired reset link. Please request a new one.';
  } else {
    // Set the session with the access token from the URL
    const { error: sessionError } = await supabase.auth.setSession({
      access_token: accessToken,
      refresh_token: '',
    });

    if (sessionError) {
      error = 'Invalid or expired reset link. Please request a new one.';
    } else {
      // Update the password
      const { error: updateError } = await supabase.auth.updateUser({
        password: password,
      });

      if (updateError) {
        error = updateError.message;
      } else {
        // Sign out and show success
        await supabase.auth.signOut();
        success = true;
      }
    }
  }
}
