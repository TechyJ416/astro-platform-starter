          <p>Your password has been successfully changed.</p>
          <p class="subtext">You can now log in with your new password.</p>
          <div class="card-actions">
            <a href="/login" class="btn btn-primary">Log In</a>
          </div>
        </div>
      ) : (
        <div class="reset-card">
          <div class="card-header">
            <h1>Set New Password</h1>
            <p>Choose a strong password for your account.</p>
          </div>

          {error && <div class="alert error">{error}</div>}

          <div id="token-error" class="alert error" style="display: none; margin: 1.5rem 2rem 0;">
            Invalid or expired reset link. Please <a href="/forgot-password">request a new one</a>.
          </div>

          <form method="POST" class="reset-form" id="reset-form">
            <input type="hidden" name="access_token" id="access_token" value="" />
            
            <div class="form-group">
              <label for="password">New Password</label>
              <input 
                type="password" 
                id="password" 
                name="password" 
                placeholder="At least 8 characters"
                minlength="8"
                required
              />
            </div>

            <div class="form-group">
              <label for="confirmPassword">Confirm New Password</label>
              <input 
                type="password" 
                id="confirmPassword" 
                name="confirmPassword" 
                placeholder="Confirm your password"
                minlength="8"
                required
              />
            </div>

            <button type="submit" class="btn btn-primary btn-full" id="submit-btn">
              Update Password
            </button>
          </form>

          <div class="card-footer">
            <p>Remember your password? <a href="/login">Log in</a></p>
          </div>
        </div>
      )}
    </div>
  </div>

  <script>
    // Handle Supabase auth token from URL hash
    document.addEventListener('DOMContentLoaded', async () => {
      const form = document.getElementById('reset-form') as HTMLFormElement;
      const tokenInput = document.getElementById('access_token') as HTMLInputElement;
      const tokenError = document.getElementById('token-error') as HTMLElement;
      const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
      
      if (!form || !tokenInput) return;

      // Check for hash params (Supabase sends tokens in the hash)
      const hashParams = new URLSearchParams(window.location.hash.substring(1));
      const accessToken = hashParams.get('access_token');
      const type = hashParams.get('type');
      
      // Also check for code param (newer Supabase PKCE flow)
      const urlParams = new URLSearchParams(window.location.search);
      const code = urlParams.get('code');
      
      if (accessToken && type === 'recovery') {
        tokenInput.value = accessToken;
        // Clear the hash from URL for security
        window.history.replaceState(null, '', window.location.pathname);
      } else if (code) {
        // Handle PKCE flow - exchange code for session
        try {
          const { createClient } = await import('@supabase/supabase-js');
          const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_URL || (document.querySelector('meta[name="supabase-url"]') as HTMLMetaElement)?.content;
          const supabaseKey = import.meta.env.PUBLIC_SUPABASE_ANON_KEY || (document.querySelector('meta[name="supabase-key"]') as HTMLMetaElement)?.content;
          
          if (supabaseUrl && supabaseKey) {
            const supabase = createClient(supabaseUrl, supabaseKey);
            const { data, error } = await supabase.auth.exchangeCodeForSession(code);
            
            if (data?.session?.access_token) {
              tokenInput.value = data.session.access_token;
              // Clear the code from URL
              window.history.replaceState(null, '', window.location.pathname);
            } else {
              throw new Error('No access token received');
            }
          }
        } catch (e) {
          console.error('Code exchange error:', e);
          form.style.display = 'none';
          tokenError.style.display = 'block';
        }
      } else {
        // No token found
        form.style.display = 'none';
        tokenError.style.display = 'block';
      }
    });
  </script>

